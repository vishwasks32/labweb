<span id="cb1-8"><a href="#cb1-8" aria-hidden="true"></a>  <span class="fu">.hidden</span> {</span>
<span id="cb1-9"><a href="#cb1-9" aria-hidden="true"></a>    <span class="kw">display</span>: <span class="dv">none</span><span class="op">;</span> <span class="co">/* Initially hiding the element */</span></span>
<span id="cb1-10"><a href="#cb1-10" aria-hidden="true"></a>  }</span>
<span id="cb1-11"><a href="#cb1-11" aria-hidden="true"></a><span class="kw">&lt;/style&gt;</span></span>
<span id="cb1-12"><a href="#cb1-12" aria-hidden="true"></a><span class="kw">&lt;/head&gt;</span></span>
<span id="cb1-13"><a href="#cb1-13" aria-hidden="true"></a><span class="kw">&lt;body&gt;</span></span>
